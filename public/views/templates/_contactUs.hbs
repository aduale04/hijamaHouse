<div id="contact" class="contact">
    <div class="container">
        <h3 class="tittle">Send us a Message</h3>
        <div class="col-md-6">
            <iframe style="width: 100%" height="400"
                    frameborder="0" scrolling="no"
                    marginheight="0" marginwidth="0"
                    src="https://maps.google.com/maps?width=600&amp;height=400&amp;hl=en&amp;q=Hijama
                            house Therapy, 234 Old Kent Rd, London SE1 5UB, United Kingdom&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">

            </iframe>
        </div>
        <div class="col-md-6">
            <div class="con-text">
                <h3><i class="icon glyphicon glyphicon-home"></i>Mailing Address</h3>
                <address>
                    234 Old Kent Road, London SE1 5UB<br>
                    Phone: +44 7561 323849 <br/>
                    Email: <a href="mailto:info@hijamahouse.co.uk">info@hijamahouse.co.uk</a>
                </address>
            </div>
            <div class="con-text">
                <h3><i class="icon glyphicon glyphicon-time"></i>Opening Hours</h3>
                <address>
                    <p>Monday to Sunday: 9:00 AM- 9:00 PM</p>
                </address>
                <p><strong>Note:</strong>Please take your
                    .in the <a href="/book" class="link">appropriate</a> hours above.</p>
            </div>
            <div class="con-text btn-group" role="group" aria-label="Social Media">
                <h3><i class="icon glyphicon glyphicon-share"></i>Follow us</h3>
                <p class="mail">
                    <a href="#"><img height="20" class="icon" src="img/icons/facebook.png"></a>
                    <a href="#"><img height="20" class="icon" src="img/icons/twitter.png"></a>
                    <a href="#"><img height="20" class="icon" src="img/icons/instagram.png"></a>
                    <a href="#"><img height="20" class="icon" src="img/icons/snapchat.png"></a>
                    <a href="#"><img height="20" class="icon" src="img/icons/tik-tok.png"></a>
                    <a href="#"><img height="20" class="icon" src="img/icons/linkedin-logo.png"></a>
                </p>
            </div>
        </div>

        <div class="col-md-12">
            <form action="/contact" method="post">
                <p class="your-para">Your Name :</p>
                <input type="text" name="name"/>
                <p class="your-para">Your Phone :</p>
                <input type="text" name="phoneNumber">
                <p class="your-para">Your Mail :</p>
                <input type="email" name="email">
                <p class="your-para">Subject :</p>
                <input type="email" name="subject">

                <p class="your-para">Your Message :</p>
                <textarea name="message" cols="77" rows="4"></textarea>

                <ul class="actions">
                    <li><input type="submit" class="style1" value="Send"/></li>
                    <li><input type="reset" class="style2" value="Reset"/></li>
                </ul>
            </form>
        </div>
    </div>
</div>
